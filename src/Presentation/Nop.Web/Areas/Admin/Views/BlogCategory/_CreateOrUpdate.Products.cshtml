@model BlogCategoryModel

@if (Model.Id > 0)
{
    <div class="card-body">
        @await Html.PartialAsync("Table", new DataTablesModel
        {
            Name = "products-grid",
            UrlRead = new DataUrl("BlogList", "BlogCategory", new RouteValueDictionary { [nameof(Model.CategoryProductSearchModel.CategoryId)] = Model.CategoryProductSearchModel.CategoryId }),
            UrlDelete = new DataUrl("BlogDelete", "BlogCategory", null),
            UrlUpdate = new DataUrl("BlogUpdate", "BlogCategory", null),
            Length = Model.CategoryProductSearchModel.PageSize,
            LengthMenu = Model.CategoryProductSearchModel.AvailablePageSizes,
            ColumnCollection = new List<ColumnProperty>
                {
                    new ColumnProperty(nameof(BlogCategoryBlogPostModel.BlogName))
                    {
                        Title = T("Admin.Catalog.BlogCategories.Blogs.Fields.Blog").Text
                    },
                    new ColumnProperty(nameof(BlogCategoryBlogPostModel.IsFeaturedProduct))
                    {
                        Title = T("Admin.Catalog.BlogCategories.Blogs.Fields.IsFeaturedBlog").Text,
                        Width = "150",
                        ClassName = NopColumnClassDefaults.CenterAll,
                        Render = new RenderBoolean(),
                        Editable = true,
                        EditType = EditType.Checkbox
                    },
                    new ColumnProperty(nameof(BlogCategoryBlogPostModel.DisplayOrder))
                    {
                        Title = T("Admin.Catalog.BlogCategories.Blogs.Fields.DisplayOrder").Text,
                        Width = "150",
                        ClassName = NopColumnClassDefaults.CenterAll,
                        Editable = true,
                        EditType = EditType.Number
                    },
                    new ColumnProperty(nameof(BlogCategoryBlogPostModel.BlogId))
                    {
                        Title = T("Admin.Common.View").Text,
                        Width = "150",
                        ClassName = NopColumnClassDefaults.Button,
                        Render = new RenderButtonView(new DataUrl("~/Admin/Blog/BlogPostEdit/", nameof(BlogCategoryBlogPostModel.BlogId)))
                    },
                    new ColumnProperty(nameof(BlogCategoryBlogPostModel.Id))
                    {
                        Title = T("Admin.Common.Edit").Text,
                        Width = "200",
                        ClassName =  NopColumnClassDefaults.Button,
                        Render = new RenderButtonsInlineEdit()
                    },
                    new ColumnProperty(nameof(BlogCategoryBlogPostModel.Id))
                    {
                        Title = T("Admin.Common.Delete").Text,
                        Width = "100",
                        Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                        ClassName = NopColumnClassDefaults.Button
                    }
                }
        })
    </div>
    <div class="card-footer">
        <button type="submit" id="btnAddNewProduct"
                onclick="javascript:OpenWindow('@(Url.Action("BlogAddPopup", "BlogCategory", new { categoryId = Model.Id, btnId = "btnRefreshProducts", formId = "category-form" }))', 800, 800, true); return false;"
                class="btn btn-primary">
            @T("Admin.Catalog.BlogCategories.AddNew")
        </button>
        <button type="submit" id="btnRefreshProducts" style="display: none"></button>
        <script>
            $(document).ready(function () {
                $('#btnRefreshProducts').click(function () {
                    //refresh grid
                    updateTable('#products-grid');

                    //return false to don't reload a page
                    return false;
                });
            });
        </script>
    </div>
}
else
{
    <div class="card-body">
        @T("Admin.Catalog.BlogCategories.Blogs.SaveBeforeEdit")
    </div>
}

